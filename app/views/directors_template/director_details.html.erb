<h1>
  Director #<%= @the_director.id%> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>


<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    over 7 years ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    over 7 years ago
  </dd>
</dl>

<h2>Filmography</h2>
<table border = "1">
<% @list_of_movies.each do |a_thing| %>
  <tr>
    <td><%= a_thing.id %></td>
    <td>
      <img src="<%= a_thing.image%>">
    </td>
    <td><%= a_thing.title %></td>
    <td><%= a_thing.year %></td>
    <td><%= @the_director.name %></td>
    <td>
      <a href ="/movies/<%= a_thing.id %>">
        Show details
      </a>
    </td>
  </tr>
<% end %>
</table>
